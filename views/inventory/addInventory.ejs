<body>
    <h1>Add New Vehicle</h1>
    <% if (flash) { %>
        <div class="flash-message"><%= flash %></div>
    <% } %>
    <% if (errors) { %>
        <div class="error-messages">
            <% errors.forEach(function(error) { %>
                <p><%= error.msg %></p>
            <% }); %>
        </div>
    <% } %>
    <form action="/inv/add-inventory" method="POST">
        <label for="classification">Classification:</label>
        <select name="classification_id" id="classification">
            <% classifications.forEach(function(classification) { %>
                <option value="<%= classification.classification_id %>"><%= classification.classification_name %></option>
            <% }); %>
        </select>
        <label for="make">Make:</label>
        <input type="text" id="make" name="inv_make" required>
        <label for="model">Model:</label>
        <input type="text" id="model" name="inv_model" required>
        <label for="year">Year:</label>
        <input type="number" id="year" name="inv_year" required>
        <label for="description">Description:</label>
        <textarea id="description" name="inv_description" required></textarea>
        <label for="image">Image URL:</label>
        <input type="text" id="image" name="inv_image" required>
        <label for="thumbnail">Thumbnail URL:</label>
        <input type="text" id="thumbnail" name="inv_thumbnail" required>
        <label for="price">Price:</label>
        <input type="number" id="price" name="inv_price" required>
        <label for="miles">Miles:</label>
        <input type="number" id="miles" name="inv_miles" required>
        <label for="color">Color:</label>
        <input type="text" id="color" name="inv_color" required>
        <input type="submit" value="Add Vehicle">
    </form>
</body>