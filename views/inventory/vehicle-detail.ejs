<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

   <!-- Vehicle Details -->
<div class="vehicle-detail">
  <img src="/<%= vehicle.inv_image %>" alt="Image of <%= vehicle.inv_make %> <%= vehicle.inv_model %> on CSE Motors">
  <h2><%= vehicle.inv_make %> <%= vehicle.inv_model %> - $<%= new Intl.NumberFormat('en-US').format(vehicle.inv_price) %></h2>
  <p><strong>Year:</strong> <%= vehicle.inv_year %></p>
  <p><strong>Price:</strong> $<%= new Intl.NumberFormat('en-US').format(vehicle.inv_price) %></p>
  <p><strong>Miles:</strong> <%= new Intl.NumberFormat('en-US').format(vehicle.inv_miles) %> miles</p>
  <p><strong>Color:</strong> <%= vehicle.inv_color %></p>
  <p><strong>Description:</strong> <%= vehicle.inv_description %></p>
  <p><strong>Classification:</strong> <%= vehicle.classification_name %></p>
</div>




